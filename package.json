{
  "name": "hsp-tei-viewer",
  "version": "1.5.32",
  "description": "hsp-tei-viewer",
  "license": "MIT",  
  "files": [
    "cjs",
    "esm"
  ],
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "clean": "shx rm -rf ./node_modules ./cjs ./esm ./test-reports ./demo/dist ./demo/fonts",
    "fix:prettier": "prettier --write \"./{src,test}/**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint": "eslint './{src,test}/**/*'",
    "test": "jest --clearCache && jest",
    "test:light": "jest --clearCache && jest --coverage=false",
    "build:dev": "webpack --config ./demo/webpack.config.js --mode=development --watch",
    "build:cjs": "rm -rf ./cjs && tsc",
    "build:esm": "rm -rf ./esm && tsc --module es2020 --outDir ./esm",
    "build": "npm run build:cjs && npm run build:esm",
    "start": "http-server ./demo",
    "deb": "echo not in use",
    "version": "echo $npm_package_version | tr -d '\n'",
    "artefactid": "echo $npm_package_name | tr -d '\n'",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://code.dev.sbb.berlin/HSP/hsp-tei-viewer.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^29.5.10",
    "@types/mark.js": "^8.11.6",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-redux": "^7.1.33",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.6",
    "copy-webpack-plugin": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.22.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "react-i18next": "^12.2.0",
    "redux-devtools-extension": "^2.13.9",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "webpack": "^5.25.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@reduxjs/toolkit": "^2.2.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "clsx": "^2.0.0",
    "hsp-web-module": "^1.30.3",
    "mark.js": "^8.11.1",
    "react": "^16.14.0 || ^17.0.0",
    "react-dom": "^16.14.0 || ^17.0.0",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "xpath": "^0.0.32"
  }
}
